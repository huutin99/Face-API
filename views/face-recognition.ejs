<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Face Recognition</title>
    <script src="js/jquery-3.5.1.min.js" type="module"></script>

    <script src="js/popper.min.js"></script>
    <link rel="stylesheet" href="stylesheets/style.css" type="text/css">
    <script defer src="js/tf.min.js"> </script>
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css" />
    <script defer src="js/bootstrap.min.js" type="module"></script>
    <script defer src="javascripts/face-api.min.js" type="module"></script>
    <script defer src="javascripts/face-recognition.js" type="module"></script>
</head>

<body>
    <div style="width: 250px; padding-bottom: 20px; margin: auto">
        <button class="btn btn-primary" id="takePhoto" style="margin-right: 40px;">Take photo</button>
        <a class="btn btn-warning" href="/detection">Detection</a>
    </div>
    <div id="video-div">
        <video width="800" height="600" autoplay muted id="video"></video>
    </div>
    <div id="canvas-div"></div>
    <div id="img-div" style="display: none;">
        <canvas id="to-draw-canvas"></canvas>
        <img id="captured-photo" alt="This photo is captured from the webcam.">
    </div>
    <!-- Modal -->
    <div class="modal fade" id="info-modal" data-backdrop="static" data-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="staticBackdropLabel">Thông tin</h4>
                </div>
                <div class="modal-body">
                    <p id="info-text" style="text-align: center; font-size: 20; margin-top: 1rem;"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-ok" onclick="eOK()">Đúng
                        rồi!</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btn-cancel"
                        onclick="eCancel()">Không phải
                        :(</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="sorry-modal" data-backdrop="static" data-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="staticBackdropLabel">Oops!</h4>
                </div>
                <div class="modal-body">
                    <p id="info-text" style="text-align: center; font-size: 20; margin-top: 1rem;">Sorry, không tìm được
                        bạn rồi...</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="btn-cancel"
                        onclick="eCancel()">Tìm lại :(</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        const video = document.getElementById('video')
        function eOK() {
            video.play()
            // location.reload();
        }
        function eCancel() {
            video.play()
            // location.reload();
        }
    </script>
</body>

</html>